{"ast":null,"code":"import { updateAvatarAPI } from '@/api';\nimport { mapGetters } from 'vuex'; // import { onMounted } from 'vue'\n\nexport default {\n  name: 'my-user',\n  computed: { ...mapGetters(['nickname', 'image', 'introduction', 'area', 'contact', 'sex'])\n  },\n\n  data() {\n    return {\n      // 保存照片的链接--base64字符串\n      avatar: '',\n      // 表单数据部分,目前无用\n      ruleForm: {\n        nickname: '',\n        sex: '',\n        birthday: '',\n        introduction: '',\n        contact: '',\n        area: ''\n      },\n      rules: {\n        nickname: [{\n          required: true,\n          message: '姓名',\n          trigger: 'blur'\n        } // { min: 3, max: 5, message: '长度在 3 到 5 个字符', trigger: 'blur' }\n        ],\n        sex: [{\n          required: true,\n          message: '性别',\n          trigger: 'blur'\n        } // { min: 3, max: 5, message: '长度在 3 到 5 个字符', trigger: 'blur' }\n        ],\n        birthday: [{\n          required: true,\n          message: '生日',\n          trigger: 'blur'\n        } // { min: 3, max: 5, message: '长度在 3 到 5 个字符', trigger: 'blur' }\n        ],\n        introduction: [{\n          required: true,\n          message: '简介',\n          trigger: 'blur'\n        } // { min: 3, max: 5, message: '长度在 3 到 5 个字符', trigger: 'blur' }\n        ],\n        contact: [{\n          required: true,\n          message: '联系方式',\n          trigger: 'blur'\n        } // { min: 3, max: 5, message: '长度在 3 到 5 个字符', trigger: 'blur' }\n        ],\n        area: [{\n          required: true,\n          message: '地区',\n          trigger: 'blur'\n        } // { min: 3, max: 5, message: '长度在 3 到 5 个字符', trigger: 'blur' }\n        ]\n      }\n    };\n  },\n\n  methods: {\n    // 点击选择头像\n    chooseImg() {\n      // 模拟点击事件\n      this.$refs.iptRef.click();\n    },\n\n    // 选择完图片后要读取该文件，然后转化格式\n    async onFileChange(e) {\n      console.log(1); // 获取文件信息\n\n      const files = e.target.files;\n      console.log(files); // 没获取到\n\n      if (files[0].length === 0) {\n        this.avatar = '';\n      } else {// const fr = new FileReader()\n        // fr.readAsDataURL(files[0])\n        // fr.onload = e => {\n        // 在展示区展示\n        // this.avatar = e.target.result\n        // console.log(123)\n      }\n\n      this.avatar = URL.createObjectURL(files[0]);\n      console.log(this.avatar);\n      const form = new FormData();\n      form.append('image', files[0]);\n      const {\n        data: res\n      } = await updateAvatarAPI(form);\n      this.$message.success(res.message); // 更新个人信息\n\n      this.$store.dispatch('initUserInfo');\n    },\n\n    // 更新后台头像信息\n    async uploadFnImg() {\n      const {\n        data: res\n      } = await updateAvatarAPI(this.avatar);\n      this.$message.success(res.message); // 更新个人信息\n\n      this.$store.dispatch('initUserInfo'); // this.$message.error(res.message)\n    },\n\n    /**\r\n     * 等待接口\r\n     */\n    // 点击保存用户基本信息\n    saveUserInfo() {// this.$refs.ruleForm.validate(async valid => {\n      //   if (valid) {\n      //     // 发出请求，送出表单内容\n      //     const { data: res } = await saveUserInfoAPI(this.ruleForm)\n      //     // 更新个人信息\n      //     this.$store.dispatch('initUserInfo')\n      //   }\n      // })\n    }\n\n  },\n\n  // created(){\n  // 进来时获取用户信息\n  // }\n  mounted() {\n    console.log(this.ruleForm);\n  }\n\n};","map":{"version":3,"mappings":"AAyCA;AACA,kC,CACA;;AACA;EACAA,eADA;EAEAC,YACA;EADA,CAFA;;EAKAC;IACA;MACA;MACAC,UAFA;MAGA;MACAC;QACAC,YADA;QAEAC,OAFA;QAGAC,YAHA;QAIAC,gBAJA;QAKAC,WALA;QAMAC;MANA,CAJA;MAYAC;QACAN,WACA;UAAAO;UAAAC;UAAAC;QAAA,CADA,CAEA;QAFA,CADA;QAKAR;UAAAM;UAAAC;UAAAC;QAAA,EACA;QADA,CALA;QAQAP,WACA;UAAAK;UAAAC;UAAAC;QAAA,CADA,CAEA;QAFA,CARA;QAYAN,eACA;UAAAI;UAAAC;UAAAC;QAAA,CADA,CAEA;QAFA,CAZA;QAgBAL,UACA;UAAAG;UAAAC;UAAAC;QAAA,CADA,CAEA;QAFA,CAhBA;QAoBAJ,OACA;UAAAE;UAAAC;UAAAC;QAAA,CADA,CAEA;QAFA;MApBA;IAZA;EAsCA,CA5CA;;EA6CAC;IAEA;IACAC;MACA;MACA;IACA,CANA;;IAOA;IACA;MACAC,eADA,CAEA;;MACA;MACAA,mBAJA,CAKA;;MACA;QACA;MACA,CAFA,MAE